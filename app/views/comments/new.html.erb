<!-- comments/new.html.erb-->

<div class="text-center">
  <h5>コメント投稿画面</h5>
  <br>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_with(url: review_comments_path, model: @comment, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      
      <div class="form-group">
        <%= f.hidden_field :review_id, :value => @review_id %>
        <%= f.label :comment, 'コメント(255文字まで)' %>
        <%= f.text_field :comment, class: 'form-control' %>
      </div>
      <%= f.submit 'コメントを投稿', class: 'btn btn-primary btn-sm' %>
      <br>
      <br>
      <%= link_to 'キャンセル', reviews_path, class: 'btn btn-sm btn-dark' %>
    <% end %>
  </div>
</div>