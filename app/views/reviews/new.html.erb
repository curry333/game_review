<div class="text-center">
  <h4>レビュー投稿</h4>
  <br>
  <br>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">
    
    <%= form_with(model: @review, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      
      <div class="form-group">
        <%= f.label :game_id, 'ゲームタイトルを選択' %>
        <%= f.collection_select :game_id, Game.all, :id, :title %>
        <%= link_to '新規のゲーム登録はこちら', new_game_path, class: 'btn btn-sm btn-primary' %>
      </div>	   

      <div class="form-group">
        <%= f.label :score, '評価(1~5の0.5単位)' %>
        <%= f.number_field :score,min:1,max:5, step:0.5 %> 
      </div>

      <div class="form-group">
        <%= f.label :review, 'レビュー(500文字まで)' %>
        <%= f.text_area :review, class: 'form-control' %>
      </div>
      
      <%= f.submit '投稿', class: 'btn btn-primary btn-sm' %>
      <br>
      <br>
      <%= link_to 'キャンセル', user_path(current_user), class: 'btn btn-sm btn-dark' %>
    <% end %>

  </div>
</div>