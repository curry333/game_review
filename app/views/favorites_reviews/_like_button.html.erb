<% unless current_user == review.user %>
  <% if current_user.favreview?(review) %>
    <%= form_with(model: current_user.favorites_reviews.find_by(review_id: review.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :review_id, review.id %>
      <%= f.submit 'お気に入り登録解除', class: 'btn btn-danger btn-sm' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.favorites_reviews.build, local: true) do |f| %>
      <%= hidden_field_tag :review_id, review.id %>
      <%= f.submit 'お気に入り登録', class: 'btn btn-primary btn-sm' %>
    <% end %>
  <% end %>
<% end %>