<% unless current_user == game %>
  <% if current_user.favgame?(game) %>
    <%= form_with(model: current_user.favorites_games.find_by(game_id: game.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :game_id, game.id %>
      <%= f.submit 'お気に入り登録解除', class: 'btn btn-danger btn-sm' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.favorites_games.build, local: true) do |f| %>
      <%= hidden_field_tag :game_id, game.id %>
      <%= f.submit 'お気に入り登録', class: 'btn btn-primary btn-sm' %>
    <% end %>
  <% end %>
<% end %>