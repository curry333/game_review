<% unless current_user == maker %>
  <% if current_user.favmaker?(maker) %>
    <%= form_with(model: current_user.favorites_makers.find_by(maker_id: maker.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :maker_id, maker.id %>
      <%= f.submit 'お気に入り登録解除', class: 'btn btn-danger btn-sm' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.favorites_makers.build, local: true) do |f| %>
      <%= hidden_field_tag :maker_id, maker.id %>
      <%= f.submit 'お気に入り登録', class: 'btn btn-primary btn-sm' %>
    <% end %>
  <% end %>
<% end %>