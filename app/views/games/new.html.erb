<div class="text-center">
  <h4>ゲームタイトル登録</h4>
  <br>
  <br>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @game, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      
      <div class="form-group">
        <%= f.label :title, 'ゲームタイトル' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :maker_id, '発売元メーカー' %>
        <%= f.collection_select :maker_id, Maker.all, :id, :maker %>
        <%= link_to '新規メーカーの登録はこちら', new_maker_path, class: 'btn btn-sm btn-primary' %>
      </div>
      
      <%= f.submit '登録', class: 'btn btn-primary btn-sm' %>
      <br>
      <br>
      <%= link_to 'キャンセル あとでパス', root_url, class: 'btn btn-sm btn-dark' %>
    <% end %>
  </div>
</div>